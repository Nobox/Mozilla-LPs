/**
 * Some Sandstone typography
 */

body-text()
    font-size em(14px)
    line-height 1.5

font-large()
    font-size em(72px)
    letter-spacing -3px
    line-height 1

h1, h2, h3, h4, h5, h6
    font-family 'Open Sans Light', sans-serif
    font-weight normal
    text-shadow 0 1px 0 rgba(#fff,.75)
    line-height 1

h1
    font-size em(48px)
    letter-spacing -2px
h2
    font-size em(32px)
    letter-spacing -1px
h3
    font-size em(28px)
    letter-spacing -0.5px
h4
    font-size em(24px)
    letter-spacing -0.25px



